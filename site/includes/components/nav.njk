    <svg class="block mr-3" fill="currentColor" role="img" width="32" height="32" aria-labelledby="lang-switcher-svg-title lang-switcher-svg-description">

        <title id="lang-switcher-svg-title">Language switcher icon</title>
        <desc id="lang-switcher-svg-description">Icon for the language switcher</desc>

        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/icons/icon-library.svg#icon-globe"></use>
    </svg>

    <div class="relative">


        <select class="block appearance-none w-full bg-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-gray-100 focus:border-gray-100" onchange="window.open(this.value,'_self');">
            <option value="/sfw" {% if page.url == '/sfw/' %}selected{% endif %}>SFW (English)</option>

            {% for lang in langs %}

            <option value="{{ lang.url }}" {% if page.url == lang.url %}selected{% endif %}>{{ lang.name }}</option>

